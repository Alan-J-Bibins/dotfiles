configuration {
    show-icons:                     true;
    display-drun: 		            "ï‘„";
    terminal:                       "kitty";
    run-shell-command: "{terminal} -e {cmd}";
    drun-display-format:            "{icon} {name}";
    window-format: "{w} {t}";
    disable-history:                false;
    click-to-exit: 		            true;
    location:                       0;
    hover-select:               	false;
    me-select-entry:            	"MouseSecondary";
    me-accept-entry:            	"MousePrimary";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "myTheme"
